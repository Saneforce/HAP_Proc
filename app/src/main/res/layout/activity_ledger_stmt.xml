<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <include layout="@layout/sfatoolbar"></include>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg"
            android:orientation="vertical"
            android:padding="@dimen/C8dp">

            <TextView
                android:id="@+id/headtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/basic"
                android:text="Payment Ledger"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:textStyle="bold" />


        </RelativeLayout>


        <TextView

            android:id="@+id/retailername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C10dp"
            android:layout_marginTop="@dimen/C10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="7 Hills milk Centre"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>
        <LinearLayout
            android:id="@+id/llCustomDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/C10dp"
            android:layout_marginLeft="@dimen/C10dp"
            android:layout_marginRight="@dimen/C10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvStartDate"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/textbox_bg"
                android:drawableRight="@drawable/ic_baseline_date_range_24"
                android:drawableTint="@color/colorPrimaryDark"
                android:elevation="5dp"
                android:hint="Select  Start Date"
                android:padding="@dimen/C8dp" />


            <TextView
                android:id="@+id/tvEndDate"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/textbox_bg"
                android:drawableRight="@drawable/ic_baseline_date_range_24"
                android:drawableTint="@color/colorPrimaryDark"
                android:elevation="5dp"
                android:hint="Select  End Date"
                android:padding="@dimen/C8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg"
            android:orientation="horizontal"
            android:padding="@dimen/C5dp">


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sno"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="@dimen/C14dp"/>


            <TextView
                android:id="@+id/tvDebit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Debit"
                android:textColor="@color/white"
                android:textSize="@dimen/C14dp"
                />
            <TextView
                android:id="@+id/tvCredit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Credit"
                android:textColor="@color/white"
                android:textSize="@dimen/C14dp" />
            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Balance"
                android:textColor="@color/white"
                android:textSize="@dimen/C14dp"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLedger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:paddingTop="@dimen/C5dp"
            android:paddingBottom="@dimen/C10dp"
            />
    </LinearLayout>


</LinearLayout>


