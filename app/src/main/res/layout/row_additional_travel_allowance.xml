<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/C5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/enter_mode"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="@dimen/C3dp"
            android:background="@drawable/hash_border"
            android:hint="Enter Mode"
            android:padding="@dimen/C5dp"
            android:textColorHint="#C0C0C0"
            android:textSize="@dimen/C16dp" />

        <EditText
            android:id="@+id/enter_from"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="@dimen/C3dp"
            android:background="@drawable/hash_border"
            android:hint="Enter From"
            android:padding="@dimen/C8dp"
            android:textColorHint="#C0C0C0"
            android:textSize="@dimen/C16dp" />

        <EditText
            android:id="@+id/enter_to"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="@dimen/C3dp"
            android:background="@drawable/hash_border"
            android:hint="Enter To"
            android:padding="@dimen/C5dp"
            android:textColorHint="#C0C0C0"
            android:textSize="@dimen/C16dp" />

        <EditText
            android:id="@+id/enter_fare"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="@dimen/C3dp"
            android:background="@drawable/hash_border"
            android:hint="Enter Fare"
            android:padding="@dimen/C5dp"
            android:textColorHint="#C0C0C0"
            android:textSize="@dimen/C16dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>