<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SFA_Activity.Dashboard_Route">

    <LinearLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar_help"></include>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/route"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.2"
                    android:drawableRight="@drawable/front_arrow"
                    android:gravity="center"
                    android:text="DAILY"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/view_bg_color">

                <TextView
                    android:id="@+id/headtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Product Info"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/more_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.2"
                android:drawableRight="@drawable/front_arrow"
                android:gravity="center"
                android:text="More Info"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:weightSum="2">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="0.8"
                            android:drawableRight="@drawable/star_icon"
                            android:gravity="center"
                            android:text="Category Universe"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <Switch
                            android:id="@+id/cateswitch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="YES"></Switch>
                    </LinearLayout>

                    <GridView
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/travel_allowance"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:numColumns="4"
                        android:padding="@dimen/C5dp"
                        android:stretchMode="columnWidth" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/ablack"
                        android:outlineAmbientShadowColor="@color/ablack"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/availablitytext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="0.8"
                            android:drawableRight="@drawable/star_icon"
                            android:gravity="center"
                            android:text="Hatsun Availability"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="18dp" />



                        <Switch
                            android:id="@+id/availswitch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="YES"></Switch>
                    </LinearLayout>

                    <GridView
                        android:id="@+id/availablitygrid"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/travel_allowance"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:numColumns="4"
                        android:padding="@dimen/C5dp"
                        android:stretchMode="columnWidth" />

                    <EditText
                        android:id="@+id/reason_availablity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/textbox_bg"
                        android:elevation="5dp"
                        android:gravity="start"
                        android:hint="Please Enter Comments"
                        android:textColor="@color/grey_500"
                        android:textSize="@dimen/C13dp"
                        android:visibility="gone" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/ablack"
                        android:outlineAmbientShadowColor="@color/ablack"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/otherbrand"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="35dp"
                            android:layout_weight="1"
                            android:text="Other Brand"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/C10dp">

                            <TextView
                                android:id="@+id/leave_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/round_rect_light_grey"
                                android:drawablePadding="@dimen/C10dp"
                                android:text="AAvin,hutsun,sona"
                                android:textColor="@color/black"
                                android:textSize="17dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <TextView
            android:id="@+id/takeorder"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/C10dp"
            android:background="@color/view_bg_color"
            android:gravity="center"
            android:text="Take Order"
            android:textColor="@color/white"
            android:textSize="17dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>