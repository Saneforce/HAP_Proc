<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints,UselessLeaf">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C7dp"
            android:elevation="@dimen/C5dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/C8dp"
                android:layout_marginRight="@dimen/C8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sf_namelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/SfName"
                        style="@style/TextStyle" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp">

                    <TextView
                        android:id="@+id/holiday_date"
                        style="@style/TextStyle"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/holiday_status"
                        style="@style/TextStyle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/C5dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_weight="1"
                        android:text="TYPE" />

                    <TextView
                        style="@style/TextStyle"
                        android:text="SHIFT" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_weight="1"
                        android:text="Holiday Entry" />

                    <TextView
                        android:id="@+id/shift_timing"
                        style="@style/TextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_weight="1"
                        android:text="IN TIME" />

                    <TextView
                        style="@style/TextStyle"
                        android:text="OUT TIME" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp">

                    <TextView
                        android:id="@+id/holiday_in_time"
                        style="@style/TextStyle"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/holiday_out_time"
                        style="@style/TextStyle" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_weight="1"
                        android:text="GEO IN" />

                    <TextView
                        style="@style/TextStyle"
                        android:text="GEO OUT" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp">

                    <TextView
                        android:id="@+id/geo_in"
                        style="@style/TextStyle"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/geo_out"
                        style="@style/TextStyle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp"
                    android:layout_marginBottom="@dimen/C10dp">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_weight="1"
                        android:text="Holiday Entry" />

                    <TextView
                        android:id="@+id/holiday_entry_date"
                        style="@style/TextStyle" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>