<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="2dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/retailername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/C5dp"
                    android:layout_marginRight="@dimen/C5dp"
                    android:paddingLeft="@dimen/C5dp"
                    android:paddingTop="@dimen/C5dp"
                    android:paddingRight="@dimen/C5dp"
                    android:text=""
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txCustID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/C5dp"
                android:layout_marginRight="@dimen/C5dp"
                android:paddingLeft="@dimen/C5dp"
                android:paddingTop="@dimen/C5dp"
                android:paddingRight="@dimen/C5dp"
                android:text=""
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/icAC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/C5dp"
                    android:layout_marginTop="@dimen/C3dp"
                    android:paddingTop="@dimen/C5dp"
                    android:src="@drawable/ic_air_conditioner_50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/retStaBdg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_blueg">

                    <TextView
                        android:id="@+id/txCustStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingRight="10dp"
                        android:text="DCO"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ShopAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C5dp"
            android:layout_marginRight="@dimen/C5dp"
            android:paddingLeft="@dimen/C5dp"
            android:paddingRight="@dimen/C5dp"

            android:text=""
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txClsdRmks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C5dp"
            android:layout_marginRight="@dimen/C5dp"
            android:paddingLeft="@dimen/C5dp"
            android:paddingRight="@dimen/C5dp"
            android:text=""
            android:textColor="@color/checkout"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_marginTop="@dimen/C5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/C50dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/C5dp"
                android:src="@drawable/ic_sequence" />

            <TextView

                android:id="@+id/tvSequence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/C5dp"
                android:paddingRight="@dimen/C5dp"

                android:text="Delivery Sequence"
                android:textSize="11sp" />

            <EditText
                android:inputType="number"
                android:id="@+id/txSearchRet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hash_border"
                android:hint="Enter the Sequence"
                android:padding="@dimen/C5dp"
                android:layout_marginRight="@dimen/C5dp"
                android:textSize="12sp" />

            <Button
                android:padding="@dimen/C5dp"
                style="@style/BottomButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND"></Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/C5dp"
            android:layout_marginEnd="5dp"
            android:gravity="end">

            <TextView
                android:id="@+id/lupdDt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_border">

    </RelativeLayout>

    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/C1dp"-->
    <!--        android:background="@color/black"-->
    <!--        android:outlineAmbientShadowColor="@color/black"></View>-->
</LinearLayout>