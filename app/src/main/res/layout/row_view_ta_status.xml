<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/C5dp"
    android:padding="@dimen/C5dp"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/ta_row_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/button_yellow"
                    android:layout_width="match_parent"
                    android:padding="@dimen/C5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ta_date"
                        style="@style/TextStyle"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/C12dp" />

                    <TextView
                        android:id="@+id/ta_status"
                        style="@style/TextStyle"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/C12dp" />

                    <TextView
                        android:id="@+id/ta_amount"
                        style="@style/TextStyle"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textSize="@dimen/C12dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/C5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:textSize="@dimen/C12dp"
                            android:text="Daily Allowance " />

                        <TextView
                            android:id="@+id/txt_da"
                            style="@style/TextStyle"
                            android:textSize="@dimen/C12dp"
                            android:textAlignment="textEnd"
                            android:layout_width="@dimen/C100dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:textSize="@dimen/C12dp"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Travel Location " />

                        <TextView
                            android:id="@+id/txt_tvrl_amt"
                            style="@style/TextStyle"
                            android:textSize="@dimen/C12dp"
                            android:textAlignment="textEnd"
                            android:layout_width="@dimen/C100dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="@dimen/C12dp"
                            style="@style/TextStyle"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Fuel Allowance"/>

                        <TextView
                            style="@style/TextStyle"
                            android:id="@+id/txt_tl"
                            android:textSize="@dimen/C12dp"
                            android:textAlignment="textEnd"
                            android:layout_width="@dimen/C100dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:textSize="@dimen/C12dp"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Lodging Allowance"/>

                        <TextView
                            style="@style/TextStyle"
                            android:id="@+id/txt_la"
                            android:textSize="@dimen/C12dp"
                            android:textAlignment="textEnd"
                            android:layout_width="@dimen/C100dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:textSize="@dimen/C12dp"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Local Conveyance"/>

                        <TextView
                            style="@style/TextStyle"
                            android:id="@+id/txt_lc"
                            android:textSize="@dimen/C12dp"
                            android:textAlignment="textEnd"
                            android:layout_width="@dimen/C100dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:textSize="@dimen/C12dp"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Other Expense"/>

                        <TextView
                            style="@style/TextStyle"
                            android:id="@+id/txt_oe"
                            android:textSize="@dimen/C12dp"
                            android:textAlignment="textEnd"
                            android:layout_width="@dimen/C100dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>