<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".Activity.TAClaimActivity">

    <include
        android:id="@+id/toolbar3"
        layout="@layout/custom_toolbar_help"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/basic"
                android:text="Date "
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:layout_marginTop="6dp"
                android:background="#B1AFAF"
                android:padding="18dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/basic"
                    android:hint="Choose Date"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColor="#515151"
                    android:textSize="18sp" />

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:id="@+id/expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_date">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints">


                    <TextView
                        android:id="@+id/mode_of_travel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Bus"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linear_bike"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:text="Started km"
                                    android:textAllCaps="false"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt"
                                    android:layout_marginTop="6dp"
                                    android:padding="18dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp"
                                    app:cardUseCompatPadding="true">

                                    <TextView
                                        android:id="@+id/txt_started_km"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:textAllCaps="false"
                                        android:textColor="#515151"
                                        android:textSize="18sp" />

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/ic_launcher_round"></ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:text="Ended km"
                                    android:textAllCaps="false"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt"
                                    android:layout_marginTop="6dp"
                                    android:padding="18dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp"
                                    app:cardUseCompatPadding="true">

                                    <TextView
                                        android:id="@+id/txt_ended_km"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"

                                        android:padding="10dp"
                                        android:textAllCaps="false"
                                        android:textColor="#515151"
                                        android:textSize="18sp" />

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/ic_launcher_round"></ImageView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/linear_bus"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:text="From"
                                    android:textAllCaps="false"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt"
                                    android:layout_marginTop="6dp"
                                    android:padding="18dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp"
                                    app:cardUseCompatPadding="true">

                                    <TextView
                                        android:id="@+id/txt_from_palce"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:textAllCaps="false"
                                        android:textColor="#515151"
                                        android:textSize="18sp" />

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/ic_launcher_round"></ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:text="To"
                                android:textAllCaps="false"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt"
                                android:layout_marginTop="6dp"
                                android:padding="18dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="2dp"
                                app:cardUseCompatPadding="true">

                                <TextView
                                    android:id="@+id/txt_to_place"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:textAllCaps="false"
                                    android:textColor="#515151"
                                    android:textSize="18sp" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:text="Fare"
                                android:textAllCaps="false"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt"
                                android:layout_marginTop="6dp"
                                android:padding="18dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="2dp"
                                app:cardUseCompatPadding="true">

                                <TextView
                                    android:id="@+id/txt_bus_fare"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:textAllCaps="false"
                                    android:textColor="#515151"
                                    android:textSize="18sp" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/txt_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expense"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/basic"
                android:text="Other Expenses "
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lay_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_exp"
                android:orientation="vertical"
                android:padding="5dp">

            </LinearLayout>

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_below="@+id/lay_row"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:divider="#fff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/basic"
                android:text="Enter the Fare "
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_fare"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_fare"
                android:layout_marginTop="6dp"
                android:background="#B1AFAF"
                android:padding="18dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_fare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/basic"
                        android:inputType="number"
                        android:padding="10dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="#515151"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/img_attach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/attach_icon" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_rmk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_fare"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/basic"
                android:text="Remarks "
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_rmk"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_rmk"
                android:layout_marginTop="6dp"
                android:background="#B1AFAF"
                android:padding="18dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/edt_rmk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/basic"
                    android:padding="10dp"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="#515151"
                    android:textSize="18sp" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_rmk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_blueg"
                android:text="SUBMIT"
                android:textColor="#fff" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>