<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TAClaimActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_blueg"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc"
            android:text="TA CLAIM"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar3"
        android:padding="8dp">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basic"
            android:text="Date "
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_marginTop="6dp"
            android:background="#B1AFAF"
            app:cardCornerRadius="5dp"
            android:layout_below="@+id/txt"
            android:id="@+id/card_date">
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/basic"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#515151"
                android:textSize="18sp"
                android:padding="10dp"
                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txt_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basic"
            android:text="Other Expenses "
            android:layout_below="@+id/card_date"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/list"
            android:layout_below="@+id/txt_exp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:divider="#fff"/>
        <TextView
            android:id="@+id/txt_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basic"
            android:text="Enter the Fare "
            android:layout_below="@+id/list"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_marginTop="6dp"
            android:background="#B1AFAF"
            app:cardCornerRadius="5dp"
            android:layout_below="@+id/txt_fare"
            android:id="@+id/card_fare">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_fare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/basic"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="#515151"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="@null"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attach_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:id="@+id/img_attach"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_rmk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basic"
            android:text="Remarks "
            android:layout_below="@+id/card_fare"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_marginTop="6dp"
            android:background="#B1AFAF"
            app:cardCornerRadius="5dp"
            android:layout_below="@+id/txt_rmk"
            android:id="@+id/card_rmk">
            <EditText
                android:id="@+id/edt_rmk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/basic"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#515151"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@null"
                />

        </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blueg"
            android:text="SUBMIT"
            android:layout_below="@+id/card_rmk"
            android:textColor="#fff"
            android:id="@+id/btn_sub"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>


</RelativeLayout>