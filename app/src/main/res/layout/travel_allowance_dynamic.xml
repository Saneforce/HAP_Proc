<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hash_border"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_to"
        android:layout_weight="2"
        android:layout_margin="@dimen/C3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enter_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Select the Mode"
            android:paddingLeft="@dimen/C10dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/C5dp"
            android:paddingBottom="@dimen/C5dp"
            android:textSize="@dimen/C16dp" />


        <ImageView
            android:layout_width="@dimen/C10dp"
            android:layout_height="@dimen/C10dp"
            android:layout_margin="@dimen/C10dp"
            android:src="@drawable/spin_down_arrow">


        </ImageView>

    </LinearLayout>

    <EditText
        android:id="@+id/enter_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter From"
        android:padding="@dimen/C10dp"
        android:textColorHint="#C0C0C0"
        android:textSize="@dimen/C16dp" />

    <EditText
        android:id="@+id/enter_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter To"
        android:padding="@dimen/C10dp"
        android:textColorHint="#C0C0C0"
        android:textSize="@dimen/C14dp" />

    <LinearLayout
        android:id="@+id/txt_nu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_to"
        android:layout_margin="@dimen/C3dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/enter_fare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter Fare"
            android:inputType="number"
            android:padding="@dimen/C10dp"
            android:textColorHint="#C0C0C0"
            android:textSize="@dimen/C14dp" />

        <ImageView
            android:id="@+id/image_attach"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="-8dp"
            android:padding="@dimen/C5dp"
            android:src="@drawable/attach_files" />

    </LinearLayout>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txt_nu"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_margin="@dimen/C5dp"
        android:background="@drawable/circle_minus_icon"
        android:gravity="right"
        android:onClick="onDelete" />
</LinearLayout>
