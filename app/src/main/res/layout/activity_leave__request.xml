<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Leave_Request"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_bg"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc"
            android:text="Leave Request"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/toolbar4">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:orientation="vertical"
            android:clipToPadding="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="Select the leave type"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/leave_type"
                android:layout_width="374dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:elevation="10dp"
                android:clickable="false"
                android:focusable="false"
                android:fontFamily="@font/alegreya_sans_sc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="From Date:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/from_date"
                android:layout_width="180dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:elevation="10dp"
                android:clickable="false"
                android:focusable="false"
                android:inputType="date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="To DATE:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/to_date"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:elevation="10dp"
                android:clickable="false"
                android:focusable="false"
                android:inputType="date"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="no of days:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/no_of_days"
                android:layout_width="111dp"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:elevation="10dp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="reason for leave:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/reason_leave"
                android:layout_width="368dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:elevation="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_bg"
                android:fontFamily="@font/alegreya_sans_sc"
                android:gravity="center_vertical"
                android:text="SUBMIT"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="RtlCompat"
                android:layout_marginTop="15dp"/>





        </LinearLayout>


    </ScrollView>




</LinearLayout>