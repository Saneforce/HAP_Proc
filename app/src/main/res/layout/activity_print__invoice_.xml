<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SFA_Activity.Dashboard_Route">

    <LinearLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar_help"></include>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/view_bg_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1.2"
                    android:text="Back"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.8"
                    android:text="Print Preview"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="OK"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@color/printbackcolor"
            android:orientation="vertical"
            android:padding="@dimen/C8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="SALES INVOICE"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C17dp">

                </TextView>

                <TextView
                    android:id="@+id/retailerroute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KALAKADU"

                    android:textColor="@color/black"
                    android:textSize="@dimen/C15dp">

                </TextView>

                <TextView
                    android:id="@+id/retailername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="thirumalaivasan"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C15dp">

                </TextView>

                <TextView
                    android:id="@+id/retaileAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KALAKADU,nandhana,chennai,coimbatore"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C15dp">

                </TextView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/billnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12345678"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>

                    <TextView
                        android:id="@+id/invoicedate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2021-03-29"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/statuscolor"
                    android:outlineAmbientShadowColor="@color/statuscolor"></View>

                <LinearLayout
                    android:id="@+id/row_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="@dimen/header_width1"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/itemstextview"
                            android:layout_width="@dimen/header_width1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/sno"
                            android:gravity="left"
                            android:text="Item"
                            android:textColor="@color/black"
                            android:textSize="@dimen/C16dp"></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="@dimen/header_width2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/orderqty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Qty"
                            android:textColor="@color/black"
                            android:textSize="@dimen/C16dp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/header_width2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/Rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Rate"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/C16dp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/header_width2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Total"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/C16dp"></TextView>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.85dp"
                    android:background="@color/statuscolor"></View>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/printrecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.85dp"
                    android:background="@color/statuscolor"
                    android:outlineAmbientShadowColor="@color/statuscolor"></View>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subtotal"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>

                    <TextView
                        android:id="@+id/subtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total item"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>

                    <TextView
                        android:id="@+id/totalitem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Qty"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>

                    <TextView
                        android:id="@+id/totalqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Free Qty"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>

                    <TextView
                        android:id="@+id/totalfreeqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gst Rate"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>

                    <TextView
                        android:id="@+id/gstrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cash Discount"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>
                    <TextView
                        android:id="@+id/cashdiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/statuscolor"
                    android:outlineAmbientShadowColor="@color/statuscolor"></View>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Net Amount"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>

                    <TextView
                        android:id="@+id/netamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C15dp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/statuscolor"
                    android:outlineAmbientShadowColor="@color/statuscolor"></View>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_block"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/lin_request_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/C5dp"
                android:layout_weight="1"
                android:background="@drawable/button_block"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Alltextclick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="SMS"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_request_Pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/C5dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Pendingclick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="EMAIL"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/C5dp"
                android:layout_weight="1"
                android:background="@drawable/button_block"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Completeclick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="PRINT"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>