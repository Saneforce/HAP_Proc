<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ApprovalViewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc"
            android:text="Travel Allowance Approval"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/btm_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:gravity="center">


        <Button
            android:id="@+id/approve"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:background="@drawable/round_rect_green"
            android:text="Approve" />

        <Button
            android:id="@+id/reject"
            style="@style/ButtonStyle"
            android:layout_weight="1"
            android:background="@drawable/round_rect_red"
            android:text="Reject" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btm_lay"
        android:layout_below="@+id/toolbar3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp">

            <LinearLayout
                android:id="@+id/lin_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Name"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Emp Code"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="HQ"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Designation"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Mobile No"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Start Mode"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="End Mode"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Start Km"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="End Km"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text="Approved Amount"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text=": NAME"
                        android:textColor="#393838"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text=": emp"
                        android:textColor="#393838"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_hq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text=": hq"
                        android:textColor="#393838"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text=": designation"
                        android:textColor="#393838"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_mob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text=": monb"
                        android:textColor="#393838"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_smod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text=": start mo"
                        android:textColor="#393838"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_emod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text=": end mo"
                        android:textColor="#393838"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_skm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text=": start km"
                        android:textColor="#393838"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_ekm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:text=": end km"
                        android:textColor="#393838"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edt_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_rect_with_blue_stroke"
                        android:digits="1234567890"
                        android:ems="6"
                        android:fontFamily="@font/basic"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_lay"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/basic"
                android:padding="5dp"
                android:text="Other Expenses"
                android:textColor="#EC2A2A"
                android:textSize="17sp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/other"
                android:layout_marginTop="5dp">

                <ListView
                    android:id="@+id/list_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="4dp"></ListView>

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>