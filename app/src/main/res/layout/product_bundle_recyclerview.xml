<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/row_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/C5dp"
        android:background="@color/white"
        android:orientation="vertical"

        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productname"
                    android:layout_marginStart="@dimen/C5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="11sp"/>
                <TextView
                android:id="@+id/erpCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Rate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="false"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rlUOM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tvUOM"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:text="EA"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>
                </LinearLayout>
                <TextView

                    android:id="@+id/Qty"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingLeft="@dimen/C5dp"
                    android:paddingRight="@dimen/C5dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="RtlCompat" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTaxTotAmt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/Disc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/Amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/C5dp"
                    android:layout_marginTop="@dimen/C5dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:text="Curr.Stock"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/tvStockBal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:layout_marginLeft="15dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="@dimen/C20dp"
                        android:gravity="end"
                        android:text="Sale Qty"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tvTknStock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:layout_marginLeft="15dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="@dimen/C20dp"
                        android:gravity="end"
                        android:text="Balance"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tvCLStock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:layout_marginLeft="15dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvBatchNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp"/>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_weight="1">

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>