<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/row_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/C3dp"
        android:layout_marginTop="@dimen/C5dp"

        android:layout_marginRight="@dimen/C3dp"
        android:orientation="vertical"

        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/C8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/productname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp"
                    android:textStyle="bold"
                    android:text="jkjhkh
"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/C8dp"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/C8dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/erpCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp"
                    android:text=""
                    android:textStyle="bold"/>
            </LinearLayout>
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/MrpLabel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:text="@string/MRPCAP"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/C13dp"/>
                        <TextView
                    android:id="@+id/MrpRate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="0.00"
                            android:layout_marginLeft="@dimen/C5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp"/>
                    </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvDiscBasePricelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:inputType="number"
                        android:text="Discounted Base Price  "
                        android:textColor="@color/grey_800"
                        android:visibility="visible" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:inputType="number"
                        android:text=""
                        android:textColor="@color/grey_800"
                        android:visibility="visible" />


                    <TextView

                        android:id="@+id/tvDiscBasePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/C10dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:inputType="number"
                        android:text="â‚¹0"
                        android:textColor="@color/txt_color_black"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:text="RP:"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"/>
                    <TextView
                        android:id="@+id/Rate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:text="0.00"
                        android:textColor="@color/black"
                        android:paddingRight="@dimen/C2dp"
                        android:textSize="@dimen/C13dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/C8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/Free"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/C3dp"
                        android:gravity="end"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/tvUOM"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="false"
                        android:fontFamily="sans-serif"
                        android:gravity="bottom|start"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/RegularQty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"></TextView>
                </LinearLayout>



                <!--                <LinearLayout-->
                <!--                    android:layout_width="0dp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1">-->

                <!--                    <TextView-->
                <!--                        android:id="@+id/productqty"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:gravity="end"-->
                <!--                        android:text="0"-->
                <!--                        android:textColor="@color/black"-->
                <!--                        android:textSize="@dimen/C13dp"></TextView>-->
                <!--                </LinearLayout>-->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/C15dp"
                    android:background="@drawable/order_qty_backround">

                    <ImageView
                        android:id="@+id/ivQtyMns"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="6dp"
                        android:src="@drawable/disable_minus"
                        app:tint="@color/color_red" />

                    <EditText

                        android:id="@+id/Qty"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@color/white"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="4"
                        android:paddingLeft="@dimen/C5dp"
                        android:paddingRight="@dimen/C5dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"
                        tools:ignore="RtlCompat" />

                    <ImageView
                        android:id="@+id/ivQtyPls"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="6dp"
                        android:src="@drawable/plus"
                        app:tint="@color/green" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivDel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/C5dp"
                    android:padding="@dimen/C5dp"
                    android:src="@drawable/delete_cart"></ImageView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTaxTotAmt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="bottom|end"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/Disc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ActualTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/ActualTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/Amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="bottom|end"
                        android:text="Value"
                        android:textStyle="bold"
                        android:paddingEnd="@dimen/C2dp"
                        android:textColor="@color/ApproveGreen"
                        android:textSize="@dimen/C13dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/C8dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvStockLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="In Stock : "
                    android:textColor="@color/grey_800"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvStockBal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/C13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="@dimen/C20dp"
                    android:gravity="end"
                    android:text="Sale Qty"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvTknStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:layout_marginLeft="15dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/C5dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="Balance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp"/>
                <TextView
                    android:id="@+id/tvCLStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:layout_marginLeft="15dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/C2dp"
                android:layout_marginLeft="@dimen/C2dp"
                android:layout_marginRight="@dimen/C2dp"
                android:background="@color/grey_200" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_weight="1">

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>