<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <include layout="@layout/custom_toolbar_help"></include>

    <include layout="@layout/procuct_category_types"></include>


    <RelativeLayout
        android:id="@+id/more_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/C10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/outlet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C15dp"
            android:gravity="center_vertical"
            android:text="QPS"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/tvQPSViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/C15dp"
            android:gravity="center_vertical"
            android:text="View Status"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/Category_Nametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/C15dp"
        android:layout_marginTop="@dimen/C10dp"
        android:text="AM SNACKS BAR"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/C15dp"
                        app:cardCornerRadius="@dimen/C10dp">

                        <LinearLayout
                            android:id="@+id/llQPSStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C15dp"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextStyle"
                                    android:paddingTop="@dimen/C10dp"
                                    android:text="Other Brand" />

                                <EditText
                                    android:id="@+id/select_hours"
                                    style="@style/TextStyle"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/textbox_bg"
                                    android:elevation="5dp"
                                    android:hint="Enter value here"
                                    android:padding="@dimen/C8dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextStyle"
                                    android:paddingTop="@dimen/C10dp"
                                    android:text="HAP Brand" />

                                <EditText
                                    style="@style/TextStyle"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/textbox_bg"
                                    android:elevation="5dp"
                                    android:hint="Enter value here"
                                    android:padding="@dimen/C8dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextStyle"
                                    android:paddingTop="@dimen/C10dp"
                                    android:text="New Order" />

                                <EditText
                                    style="@style/TextStyle"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/textbox_bg"
                                    android:elevation="5dp"
                                    android:hint="Enter value here"
                                    android:padding="@dimen/C8dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextStyle"
                                    android:paddingTop="@dimen/C10dp"
                                    android:text="Period" />

                                <EditText
                                    style="@style/TextStyle"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/textbox_bg"
                                    android:elevation="5dp"
                                    android:hint="Enter value here"
                                    android:padding="@dimen/C8dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextStyle"
                                    android:paddingTop="@dimen/C10dp"
                                    android:text="Gift" />

                                <EditText
                                    style="@style/TextStyle"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/textbox_bg"
                                    android:elevation="5dp"
                                    android:hint="Enter value here"
                                    android:padding="@dimen/C8dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextStyle"
                                    android:paddingTop="@dimen/C10dp"
                                    android:text="Acheive" />

                                <EditText
                                    style="@style/TextStyle"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/textbox_bg"
                                    android:elevation="5dp"
                                    android:hint="Enter value here"
                                    android:padding="@dimen/C8dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextStyle"
                                    android:paddingTop="@dimen/C10dp"
                                    android:text="Booking Date" />

                                <TextView
                                    android:id="@+id/etQPSBookingDate"
                                    style="@style/TextStyle"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/textbox_bg"
                                    android:elevation="5dp"
                                    android:hint="Enter value here"
                                    android:padding="@dimen/C8dp" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llQPSRequestStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_yellow"
                                android:gravity="center"
                                android:padding="@dimen/C10dp"
                                android:text="QPS Request Status"
                                android:textAllCaps="true"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/C14dp"
                                android:textStyle="bold" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvQps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/C10dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">


                            </androidx.recyclerview.widget.RecyclerView>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <Button
                android:id="@+id/btnSubmit"
                style="@style/ButtonStyle"
                android:layout_alignParentBottom="true"

                android:text="Submit"></Button>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>