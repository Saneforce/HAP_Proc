<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Hap.Leave_Approval_Reject">
    <include layout="@layout/custom_toolbar_help"></include>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/C60dp"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_yellow"
                android:fontFamily="@font/alegreya_sans_sc"
                android:gravity="center"
                android:text="Missed Punch Approval"
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Name "
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Emp Code "
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="HQ"
                        android:textColor="@color/txt_color_black"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Designation "

                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Mobile  "

                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="Reason "
                        android:textColor="@color/txt_color_black"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Applied Date"

                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Missed Date"
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="Shift/On-duty"
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Checkin time "
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="Checkout time "
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Name"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/empcode"

                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Emp Code"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hq"

                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="HQ"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/designation"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Designation"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C13dp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/mobilenumber"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="79898989"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MPreason"
                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="P reason"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/applieddate"

                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="applieddate"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/misseddate"

                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="missed date"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shiftonduty"
                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="shiftonduty"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/checkintime"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="checkintime"
                        android:textColor="@color/green"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/checkouttime"
                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="checkouttime"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rejectonly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="0dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="left"
                        android:text="@string/reason"
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/reason"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/C60dp"
                        android:layout_marginTop="@dimen/C10dp"
                        android:background="@drawable/round_white_backround"
                        android:gravity="top"
                        android:hint="@string/txt_enter_reason"
                        android:padding="15dp"
                        android:textSize="@dimen/C12dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/mp_rejectsave"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/C5dp"
                        android:background="@drawable/blue_txt_bg"
                        android:padding="@dimen/C5dp"
                        android:gravity="center"
                        android:text="Reject"
                        android:textAlignment="center"
                        android:textColor="@color/bg_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Approvereject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/MPapprovebutton"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_green"
                        android:fontFamily="@font/alegreya_sans_sc"
                        android:gravity="center"
                        android:text="Approve"
                        android:textColor="@color/color_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MPreject"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_amber"
                        android:gravity="center"
                        android:text="Reject"
                        android:textColor="@color/color_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
<include layout="@layout/back_arrow"></include>


    </androidx.constraintlayout.widget.ConstraintLayout>