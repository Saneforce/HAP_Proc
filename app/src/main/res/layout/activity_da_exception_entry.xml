<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Hap.DaExceptionEntry">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <include layout="@layout/custom_toolbar_help" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C10dp"
            android:layout_marginTop="@dimen/C10dp"
            android:layout_marginRight="@dimen/C10dp"
            android:orientation="vertical">


            <TextView
                style="@style/TextStyle"
                android:text="Type" />


            <androidx.cardview.widget.CardView
                android:id="@+id/exp_card_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="@dimen/C10dp"
                android:background="#B1AFAF"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/txt_crd_tpe"
                    style="@style/TextStyle"
                    android:hint="Exp Type"
                    android:padding="@dimen/C5dp" />

            </androidx.cardview.widget.CardView>


            <TextView

                style="@style/TextStyle"
                android:text="Date" />


            <EditText
                android:id="@+id/choose_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/C10dp"
                android:background="@drawable/textbox_bg"
                android:clickable="false"
                android:elevation="5dp"
                android:focusable="false"
                android:hint="Select the Date"
                android:paddingLeft="@dimen/C5dp"
                android:textSize="@dimen/C13dp" />


            <TextView
                style="@style/TextStyle"
                android:text="Time" />


            <TextView
                style="@style/TextStyle"
                android:text="Remarks" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_remarks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/C100dp"
                android:layout_marginBottom="@dimen/C10dp"
                android:background="@drawable/round_white_backround"
                android:gravity="top"
                android:hint="Da Exception Entry Purpose"
                android:padding="@dimen/C5dp"
                android:textSize="@dimen/C12dp" />


            <Button
                style="@style/ButtonStyle"
                android:background="@color/colorPrimary"
                android:text="Save" />


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/back_arrow"></include>

</androidx.constraintlayout.widget.ConstraintLayout>