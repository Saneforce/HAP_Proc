<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/C5dp"
        app:cardCornerRadius="@dimen/C10dp">


        <LinearLayout
            android:id="@+id/row_report"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/C3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/header_width1"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txt_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/sno"
                        android:gravity="left"
                        android:text="OrderID"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/header_width2"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/Itemcountinvoice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/sno1"
                        android:gravity="center"
                        android:text="54"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/header_width2"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/sno1"
                        android:gravity="center"
                        android:text="Value"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"></TextView>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sno">

                    <ImageView
                        android:id="@+id/ivDate"
                        android:layout_width="@dimen/C10dp"
                        android:layout_height="@dimen/C10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_date_range_24"></ImageView>

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="@dimen/header_width1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/C3dp"
                        android:layout_toRightOf="@+id/ivDate"
                        android:text="OrderDate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sno">

                    <ImageView
                        android:id="@+id/ivStatus"
                        android:layout_width="@dimen/C10dp"
                        android:layout_height="@dimen/C10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_pending_24"></ImageView>


                    <TextView
                        android:id="@+id/Statusinvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/C3dp"
                        android:layout_toRightOf="@+id/ivStatus"
                        android:text="Complete"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"></TextView>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>