<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFile"
        android:layout_width="@dimen/C50dp"
        android:layout_height="@dimen/C50dp"
        android:layout_margin="@dimen/C5dp"
        android:src="@drawable/profile_img"></ImageView>

    <ImageView
        android:layout_alignRight="@+id/ivFile"
        android:id="@+id/ivDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/C1dp"
        android:src="@drawable/ic_baseline_close_24"></ImageView>


</RelativeLayout>