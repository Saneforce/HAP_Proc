<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_Hap.Leave_Approval">


        <include layout="@layout/custom_toolbar_help" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_yellow"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/alegreya_sans_sc"
                    android:gravity="center"
                    android:text="Tourplan Approval"
                    android:textAlignment="center"
                    android:textColor="@color/color_white"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/C60dp"
            android:background="@color/bg_color"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Name "

                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Emp Code "
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="HQ"
                        android:textColor="@color/txt_color_black"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Designation "

                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Mobile  "

                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Plan Date "
                        android:textColor="@color/txt_color_black"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Work Type "

                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="Route  "

                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="Distributor "
                        android:textColor="@color/txt_color_black"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Remarks "
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Name"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/empcode"

                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Emp Code"

                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hq"

                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="HQ"
                        android:textColor="@color/green"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/designation"

                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Designation"
                        android:textColor="@color/green"

                        android:textSize="@dimen/C13dp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/mobilenumber"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Mobile Number"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/plandate"

                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Plan Date"
                        android:textColor="@color/green"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/worktype"

                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Work Type"
                        android:textColor="@color/green"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/route"

                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="Route"
                        android:textColor="@color/green"
                        android:textSize="@dimen/C16dp"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/distributor"

                        android:layout_width="100dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:text="Distributor"
                        android:textColor="@color/green"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/remarks"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Remarks"
                        android:textColor="@color/green"

                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rejectonly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="0dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="left"
                        android:text="@string/reason"
                        android:textColor="@color/txt_color_black"
                        android:textSize="@dimen/C16dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/reason"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/C60dp"
                        android:layout_marginTop="@dimen/C10dp"
                        android:background="@drawable/round_white_backround"
                        android:gravity="top"
                        android:hint="@string/txt_enter_reason"
                        android:padding="15dp"
                        android:textSize="@dimen/C12dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tp_rejectsave"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/C10dp"
                        android:background="@drawable/blue_txt_bg"
                        android:gravity="center"
                        android:padding="@dimen/C5dp"
                        android:text="Save"
                        android:textAlignment="center"
                        android:textColor="@color/bg_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Approvereject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="15dp"

                android:weightSum="4">

                <TextView
                    android:id="@+id/tpapprovebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="2"
                    android:background="@drawable/button_green"
                    android:gravity="center"
                    android:padding="@dimen/C5dp"
                    android:text="Approve"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tpreject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="2"
                    android:background="@drawable/button_amber"
                    android:gravity="center"
                    android:padding="@dimen/C5dp"
                    android:text="Reject"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/back_arrow"></include>


</androidx.constraintlayout.widget.ConstraintLayout>