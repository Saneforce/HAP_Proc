<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SFA_Activity.Dashboard_Route">

    <LinearLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/sfatoolbar"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:id="@+id/orderTypesLayout"
                layout="@layout/procuct_category_types"></include>
            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_bg">

                <TextView
                    android:id="@+id/headtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Invoice History"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/outlet_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Thirumalaivasan"
                android:textColor="@color/black"
                android:textSize="@dimen/C17dp"
                android:textStyle="bold" />
        </LinearLayout>
            <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bottom_border">

        </RelativeLayout>
            <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lastinvoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/front_arrow"
                android:gravity="center"
                android:text="Last 3 Invoices"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
            <LinearLayout
            android:id="@+id/row_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg">

            <LinearLayout
                android:layout_width="@dimen/header_width1"
                android:layout_height="@dimen/C45dp"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/txt_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/sno"
                    android:gravity="center"
                    android:text="Invoice ID"
                    android:textColor="@color/white"
                    android:textSize="@dimen/C16dp"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/header_width2"
                android:layout_height="@dimen/C45dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/Itemcount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Items"
                    android:textColor="@color/white"
                    android:textSize="@dimen/C16dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/header_width2"
                android:layout_height="@dimen/C45dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Value"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/C16dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/header_width2"
                android:layout_height="@dimen/C45dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Type"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/C16dp"></TextView>
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/invoicerecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout

                android:id="@+id/lin_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C7dp"
                android:layout_weight="1"
                android:background="@drawable/button_blueg"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/Alltextclick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="ORDER"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_repeat_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C7dp"
                android:layout_weight="1"
                android:background="@drawable/button_blueg"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/Completeclick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="REPEAT   ORDER"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_invoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C7dp"
                android:layout_weight="1"
                android:background="@drawable/button_blueg"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/Pendingclick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="INVOICE"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_noOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C7dp"
                android:layout_weight="1"
                android:background="@drawable/button_blueg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNoorder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="No Order"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_repeat_invoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C7dp"
                android:layout_weight="1"
                android:background="@drawable/button_blueg"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/Repeatinvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="REPEAT INVOICE"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linNoOrderRmks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/ablack"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/C15dp"
            android:layout_marginRight="@dimen/C15dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/C5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reason For No Order"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/btnRmkClose"
                    android:layout_width="@dimen/C20dp"
                    android:layout_height="@dimen/C20dp"
                    android:src="@drawable/close_btn"
                    android:layout_margin="@dimen/C5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/C10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reason"/>
                    <TextView
                        android:id="@+id/txRmkTmplSpinn"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click Here To Select Template"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hash_border"
                    >
                    <EditText
                        android:id="@+id/txRmksNoOrd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:enabled="false"
                        android:clickable="false"
                        android:textSize="13sp"
                        android:gravity="top"
                        android:lines="3"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnSbmtNOrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp"
                    android:padding="@dimen/C10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_blueg"
                    android:text="Submit"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>