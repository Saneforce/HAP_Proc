<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SFA_Activity.Dashboard_Route">

    <LinearLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar_help"></include>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/view_bg_color">

                <TextView
                    android:id="@+id/headtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Invoice History"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/outlet_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Thirumalaivasan"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/lastinvoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/front_arrow"
                android:gravity="center"
                android:text="Last 3 Invoices"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/header_width1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_order"
                    android:layout_width="@dimen/header_width1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/sno"
                    android:gravity="left"
                    android:text="Invoice ID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C16dp"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/header_width2"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Itemcount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Items"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C16dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/header_width2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Value"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C16dp"></TextView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/invoicerecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/C60dp"
                android:background="@color/greeninvoicecolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/view_bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C7dp"
                android:layout_weight="1"
                android:background="@drawable/invoice_backround"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Alltextclick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="ORDER"
                    android:textColor="@color/black"
                    android:textSize="11dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_repeat_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C8dp"
                android:layout_weight="1"
                android:background="@drawable/invoice_backround"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Completeclick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="REPEAT   ORDER"
                    android:textColor="@color/black"
                    android:textSize="11dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_invoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C10dp"
                android:layout_weight="1"
                android:background="@drawable/invoice_backround"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Pendingclick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="INVOICE"
                    android:textColor="@color/black"
                    android:textSize="11dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_repeat_invoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C7dp"
                android:layout_weight="1"
                android:background="@drawable/invoice_backround"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Repeatinvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="REPEAT INVOICE"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>