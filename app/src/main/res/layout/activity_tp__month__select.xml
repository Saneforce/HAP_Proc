<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".Activity_Hap.Tp_Month_Select">


        <include layout="@layout/custom_toolbar_help" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CurrentMoth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="57dp"
                android:layout_marginEnd="53dp"
                android:background="@drawable/sign_bg"
                android:elevation="1dp"
                android:gravity="center"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="CurrentMoth"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NextMonth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentEnd="false"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginStart="57dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="53dp"
                android:background="@drawable/sign_bg"
                android:fontFamily="@font/alegreya_sans_sc"
                android:gravity="center"
                android:text="NextMonth"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/back_arrow"></include>


</androidx.constraintlayout.widget.ConstraintLayout>