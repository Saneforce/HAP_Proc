<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Hap.AddNewRetailer">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <include layout="@layout/custom_toolbar_help"></include>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_bg">

                <TextView

                    android:id="@+id/headtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Outlet Info"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.9"
            android:orientation="vertical"
            tools:ignore="UselessParent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C5dp"
                android:layout_marginBottom="@dimen/C10dp"
                app:cardCornerRadius="@dimen/C5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/C5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/head_quater"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"
                                android:visibility="gone"></TextView>

                            <LinearLayout
                                android:id="@+id/linear_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_white_backround"
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/order_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="@string/head_quater" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <LinearLayout

                                    android:id="@+id/CurrentLocLin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="Current Location Address "
                                        android:textColor="@android:color/black"
                                        android:textSize="13dp"></TextView>

                                    <ImageView
                                        android:id="@+id/copypaste"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:src="@drawable/copy_paste" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/CurrentLocationsAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/text_bg_grey"
                                    android:gravity="start"
                                    android:hint="address"

                                    android:padding="10dp"
                                    android:textSize="13dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Distributor"
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"></TextView>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/mandatory" />

                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/rl_Distributor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/distributor_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Distributor"
                                    android:padding="5dp"
                                    android:textSize="13dp" />

                                <ImageView
                                    android:layout_width="@dimen/C10dp"
                                    android:layout_height="@dimen/C10dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/C10dp"
                                    android:src="@drawable/spin_down_arrow"></ImageView>
                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="@string/route"
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"></TextView>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/mandatory" />

                            </LinearLayout>


                            <RelativeLayout
                                android:id="@+id/rl_route"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/retailer_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/route"
                                    android:padding="5dp"
                                    android:textSize="13dp" />

                                <ImageView
                                    android:id="@+id/ivRouteSpinner"
                                    android:layout_width="@dimen/C10dp"
                                    android:layout_height="@dimen/C10dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/C10dp"
                                    android:src="@drawable/spin_down_arrow"></ImageView>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/retailercodevisible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Retailer Code "
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"></TextView>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/mandatory" />

                            </LinearLayout>


                            <EditText
                                android:id="@+id/retailercode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:gravity="start"
                                android:hint="code"
                                android:padding="10dp"
                                android:textSize="13dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:text="New Retailer "
                                                android:textColor="@android:color/black"
                                                android:textSize="13dp"></TextView>

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="12dp"
                                                android:src="@drawable/mandatory" />

                                        </LinearLayout>


                                        <EditText
                                            android:id="@+id/edt_new_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/text_bg_grey"
                                            android:gravity="start"
                                            android:hint="Enter the Name"
                                            android:maxLines="2"
                                            android:padding="10dp"
                                            android:textSize="13dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:text="Owner Name "
                                                android:textColor="@android:color/black"
                                                android:textSize="13dp"></TextView>

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="12dp"
                                                android:src="@drawable/mandatory" />

                                        </LinearLayout>


                                        <EditText
                                            android:id="@+id/owner_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/text_bg_grey"
                                            android:gravity="start"
                                            android:hint="Enter the owner Name"
                                            android:maxLines="2"
                                            android:padding="10dp"
                                            android:textSize="13dp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1.5"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="12dp"
                                        android:src="@drawable/mandatory" />


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="@dimen/C10dp"
                                        android:background="@color/white"
                                        app:cardCornerRadius="@dimen/C8dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">


                                            <ImageView
                                                android:id="@+id/ivShopPhoto"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:scaleType="fitXY"
                                                android:src="@drawable/profile_img"></ImageView>


                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Address"
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"></TextView>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/mandatory" />
                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                                    android:id="@+id/btnRefLoc"
                                    android:layout_width="150dp"
                                    android:layout_height="@dimen/C30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/C10dp"
                                    android:background="@drawable/button_blueg"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:text="Refresh Location"
                                    android:textColor="@android:color/white"
                                    android:theme="@style/BluePrimaryButton"
                                    app:finalCornerAngle="50dp"
                                    app:initialCornerAngle="10dp"
                                    app:spinning_bar_color="#FFFFFFFF"
                                    app:spinning_bar_padding="5dp"
                                    app:spinning_bar_width="5dp"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>


                            <EditText
                                android:id="@+id/edt_new_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:gravity="start"
                                android:hint="Enter the Address"
                                android:padding="10dp"
                                android:textSize="13dp" />

                        </LinearLayout>

                        <fragment
                            android:id="@+id/route_map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="130dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="City"
                                    android:textColor="@android:color/black"></TextView>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/mandatory" />

                            </LinearLayout>


                            <EditText
                                android:id="@+id/edt_new_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:gravity="start"
                                android:hint="Enter the City"
                                android:padding="10dp"
                                android:textSize="13dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Pin code"
                                    android:textColor="@android:color/black"></TextView>

                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_pin_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:gravity="start"
                                android:hint="Enter the Pin Code"
                                android:inputType="number"
                                android:padding="10dp"
                                android:textSize="13dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="GST"
                                    android:textColor="@android:color/black"></TextView>


                            </LinearLayout>


                            <EditText
                                android:id="@+id/edt_gst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:gravity="start"
                                android:hint="Enter the gst"
                                android:padding="10dp"
                                android:textSize="13dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Phone"
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"></TextView>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/mandatory" />

                            </LinearLayout>


                            <EditText
                                android:id="@+id/edt_new_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:gravity="start"
                                android:hint="Enter the Phone No"
                                android:inputType="phone"
                                android:padding="10dp"
                                android:textSize="13dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Second Phone No"
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"></TextView>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/mandatory"
                                    android:visibility="gone" />

                            </LinearLayout>


                            <EditText
                                android:id="@+id/edt_new_phone2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:gravity="start"
                                android:hint="Enter the Second Phone No"
                                android:inputType="phone"
                                android:padding="10dp"
                                android:textSize="13dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Email"
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"></TextView>


                            </LinearLayout>


                            <EditText
                                android:id="@+id/edt_new_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:gravity="start"
                                android:hint="Enter the Email"
                                android:inputType="textEmailAddress"
                                android:padding="10dp"
                                android:textSize="13dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/C10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="@string/retailer_class"
                                        android:textColor="@android:color/black"
                                        android:textSize="13dp"></TextView>


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:src="@drawable/mandatory" />

                                </LinearLayout>

                                <LinearLayout

                                    android:id="@+id/linear_retailer_class"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/text_bg_grey"
                                    android:orientation="vertical"
                                    android:padding="5dp">

                                    <TextView
                                        android:id="@+id/txt_retailer_class"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/retailer_class"
                                        android:padding="5dp"
                                        android:textSize="13dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="@string/retailer_channel"
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp" />


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/mandatory" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/linear_retailer_channel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_bg_grey"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/txt_retailer_channel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/retailer_channel"
                                    android:padding="5dp"
                                    android:textSize="13dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/C10dp"
