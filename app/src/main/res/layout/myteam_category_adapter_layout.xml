<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_view_items"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/C10dp"
    android:paddingRight="@dimen/C3dp"
    android:paddingTop="@dimen/C3dp"
    android:paddingBottom="@dimen/C3dp"
    >

    <LinearLayout
        android:id="@+id/llTeamType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/C5dp"
        android:paddingEnd="@dimen/C10dp">

        <ImageView
            android:id="@+id/ivCategoryIcon"
            android:layout_width="@dimen/C30dp"
            android:layout_height="@dimen/C30dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/profile_img" />


        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ZSM"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/C14dp" />



    </LinearLayout>


</RelativeLayout>