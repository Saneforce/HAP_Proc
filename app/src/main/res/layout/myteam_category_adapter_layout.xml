<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_view_items"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/C10dp"

    android:paddingTop="@dimen/C3dp"
    android:paddingRight="@dimen/C3dp"
    android:paddingBottom="@dimen/C3dp">

    <LinearLayout
        android:id="@+id/llTeamType"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/C50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/C5dp"
        android:paddingEnd="@dimen/C10dp">

        <ImageView
            android:id="@+id/ivCategoryIcon"
            android:layout_width="@dimen/C30dp"
            android:layout_height="@dimen/C30dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_person_24" />


        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/grey_800"
            android:textSize="@dimen/C14dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="@dimen/C50dp"
        android:layout_toRightOf="@+id/llTeamType"
        android:background="@color/background"

        />


</RelativeLayout>