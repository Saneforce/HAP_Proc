<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_parent"
    android:layout_marginBottom="@dimen/C5dp"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    app:layout_constraintCircleRadius="@dimen/C10dp"
    android:layout_marginStart="@dimen/C2dp"
    android:layout_marginEnd="@dimen/C2dp"
    app:cardCornerRadius="@dimen/C5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:textSize="16sp"
            android:textColor="@color/greentext" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cinTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="1256-12-23 00:00:00"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_coutTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="1256-12-23 00:00:00"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_inTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1221121"
                android:gravity="center"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_Activity_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingStart="@dimen/C10dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_chevron_right_24" />

        </LinearLayout>
    </LinearLayout>




