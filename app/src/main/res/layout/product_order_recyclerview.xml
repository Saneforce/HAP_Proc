<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/C5dp"
        app:cardCornerRadius="@dimen/C5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C1dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivAddShoppingCart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="3"
                    android:scaleType="centerInside"
                    android:src="@drawable/product_logo">

                </ImageView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/productname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="thirumalai"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/C30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:text="200"
                            android:textColor="@color/txt_color_black"
                            android:textSize="@dimen/C15dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/Amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:text="200"
                            android:textColor="@color/txt_color_black"
                            android:textSize="@dimen/C15dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/Free"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/C10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/txt_color_black"
                            android:visibility="gone" />


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/RegularQty"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"

                            android:hint=""
                            android:inputType="number"
                            android:text="Regular : 20"
                            android:textColor="@color/colorPrimaryDark"
                            android:visibility="visible" />


                        <TextView

                            android:id="@+id/lblAddQty"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/Qty"
                            android:gravity="center_vertical"
                            android:text="New Qty : "
                            android:textColor="@color/green"></TextView>

                        <EditText
                            android:id="@+id/Qty"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_weight="0.5"
                            android:background="@drawable/order_qty_backround"
                            android:gravity="center_vertical"
                            android:hint="0"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/C13dp"
                            tools:ignore="RtlCompat"></EditText>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/C30dp"
                        android:orientation="horizontal">

                        <TextView
android:fontFamily="sans-serif"
                            android:id="@+id/RegularAmt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"

                            android:hint=""
                            android:inputType="number"
                            android:text="Amount : 20"
                            android:textColor="@color/colorPrimaryDark"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/qtyAmt"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"

                            android:hint=""
                            android:inputType="number"
                            android:text="Amount : â‚¹0"
                            android:textColor="@color/green"
                            android:visibility="visible" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/totalqty"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"

                            android:hint=""
                            android:inputType="number"
                            android:text="Total Qty : 20"
                            android:textColor="@color/txt_color_black"
                            android:visibility="visible" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnlblRwEntry"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Regular"
                            android:textColor="@color/black"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Additional"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Amount"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnRwEntry"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/C3dp"
                            android:layout_weight="1"
                            android:background="@drawable/order_qty_backround"
                            android:gravity="center"
                            android:hint=""
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/C3dp"
                            android:layout_weight="1"
                            android:background="@drawable/order_qty_backround"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/C3dp"
                            android:layout_weight="1"
                            android:background="@drawable/order_amount_back"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C5dp"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <TextView
                            android:id="@+id/tvPreOrderVal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Previous Order value : 10"
                            android:textColor="@color/black"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/Disc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Disc:"
                            android:textColor="@color/black"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/productqty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sno1"
                            android:gravity="end"
                            android:text="54"
                            android:textColor="@color/black"
                            android:textSize="@dimen/C13dp"></TextView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 0"
                            android:textColor="@color/txt_color_black"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 0"
                            android:textColor="@color/txt_color_black"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="20"
                            android:textColor="@color/txt_color_black"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>