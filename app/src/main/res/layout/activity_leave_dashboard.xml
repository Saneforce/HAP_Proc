<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Leave_Dashboard"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_bg"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc"
            android:text="@string/select_the_type"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/leave_request"
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/leave"
                    android:layout_width="104dp"
                    android:layout_height="54dp"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="34dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/leave" />

                <TextView

                    android:layout_width="94dp"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/leave"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/alegreya_sans_sc"
                    android:text="@string/leave_request"
                    android:textColor="#000000" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/permission_request"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:id="@+id/permisson"
                    android:layout_width="65dp"
                    android:layout_height="53dp"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="58dp"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/permisson" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/permisson"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="35dp"

                    android:fontFamily="@font/alegreya_sans_sc"
                    android:text="@string/permission"
                    android:textColor="#000000" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/missed_punch"
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:id="@+id/punch"
                    android:layout_width="104dp"
                    android:layout_height="54dp"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="34dp"
                    app:srcCompat="@drawable/missed" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="28dp"

                    android:layout_below="@id/punch"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/alegreya_sans_sc"
                    android:text="@string/missed_punch"
                    android:textColor="#000000" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/weekly_off"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:id="@+id/rest"
                    android:layout_width="65dp"
                    android:layout_height="53dp"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="58dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/rest" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/rest"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="35dp"

                    android:fontFamily="@font/alegreya_sans_sc"
                    android:text="@string/weekly_off"
                    android:textColor="#000000" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>