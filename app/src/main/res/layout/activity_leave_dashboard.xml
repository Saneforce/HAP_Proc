<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_Hap.Leave_Dashboard">

        <include layout="@layout/custom_toolbar_help" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar3"
            android:layout_marginBottom="@dimen/C60dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:text="Request"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_yellow"
                            android:gravity="center"
                            android:padding="@dimen/C10dp"
                            android:textStyle="bold"

                            android:textAllCaps="true"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/C14dp" />


                        <LinearLayout
                            android:id="@+id/lin_leave_req"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Leave Request" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_per_req"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Permission Request" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_fligh_mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Flight Ticket Booking" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_miss_punch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Missed Punch" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_week_off"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Weekly Off" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_deviation_entry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Deviation Entry" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:text="Status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_yellow"
                            android:gravity="center"
                            android:padding="@dimen/C10dp"
                            android:textStyle="bold"

                            android:textAllCaps="true"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/C14dp" />

                        <LinearLayout
                            android:id="@+id/lin_leav_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Leave Status" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_per_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">


                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Permission Status" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_duty_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="On-duty Status" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_miss_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Missed Punch Status" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_week_off_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Weekly-off Status" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_ext_shift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">


                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Extended shift Status" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_holiday_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">


                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Holiday Entry Status" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_deviation_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Deviation Entry Status" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_leave_cancel_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Leave Cancel Status" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/back_arrow"></include>


</androidx.constraintlayout.widget.ConstraintLayout>