<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Hap.Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/LogoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/todo"
            android:src="@drawable/clogo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/C100dp"
            android:src="@drawable/profile_img" />

        <TextView
            android:id="@+id/lblUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/C14dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="TextView" />
        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/C10dp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_marginTop="-6dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/C20dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lin_myday_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C5dp"
                android:background="@drawable/g_sign"
                android:padding="@dimen/C16dp">

                <TextView
                    android:id="@+id/mydayplan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="My day plan"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_check_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/C5dp"
                android:background="@drawable/button_green"
                android:padding="@dimen/C16dp">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Check-In"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/lin_request_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/C5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_amber"
                    android:padding="@dimen/C16dp"
                    >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Requests/status"
                        android:textColor="#FFFFFF" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_report"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/g_sign"
                    android:padding="@dimen/C16dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="My Reports"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_onduty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/C5dp"
                    android:layout_weight="1"
                    android:background="@drawable/sign_bg"
                    android:padding="@dimen/C16dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="On-Duty "
                        android:textColor="#FFFCFC" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_approvals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_dgreen"
                    android:padding="@dimen/C16dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Approvals"
                        android:textColor="#FFFCFC"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/lin_ta_claim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/C5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_purple"
                    android:padding="@dimen/C16dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="TA &amp; claim"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_extenden_shift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange"
                    android:padding="@dimen/C16dp">
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Extended Shift"
                        android:textColor="#FFFCFC" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_tour_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C5dp"
                android:background="@drawable/button_purple"
                android:padding="@dimen/C16dp">


                <TextView
                    android:id="@+id/tp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Tour Plan"
                    android:textColor="#FFFFFF" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C5dp"
                android:background="@drawable/button_red"
                android:padding="@dimen/C16dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Exit"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>