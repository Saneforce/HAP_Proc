<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activity_Hap.ApproveOutletsDetailedActivity">

    <include layout="@layout/sfatoolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/headtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Approve / Reject Outlet"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/basic"
            android:paddingEnd="10dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="13dp"
            android:visibility="gone" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/OutletName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aathimurugan"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/OutletCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="238000887"
                    android:textColor="@color/grey_600"
                    android:textSize="11sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/btnCallMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView

                        android:id="@+id/icMob"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/call_icon"
                        app:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/OutletMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="88078756847"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/C12dp"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/OutletAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Address"
                    android:textColor="@color/grey_600"
                    android:textSize="11sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@drawable/bottom_border"
                android:layout_marginTop="@dimen/C10dp"
                android:layout_height="5dp"/>

            <LinearLayout
                android:id="@+id/name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C15dp"
                    android:text="Outlet Name"
                    android:textColor="@color/text_color_dark" />

                <TextView
                    android:id="@+id/outletName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/text_bg_grey"
                    android:paddingHorizontal="@dimen/C10dp"
                    android:paddingVertical="6dp"
                    android:text="Outlet Name"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/outletNameNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/text_bg_grey"
                    android:paddingHorizontal="@dimen/C10dp"
                    android:paddingVertical="6dp"
                    android:text="New Outlet Name"
                    android:textColor="@color/Exit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/outletType_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C15dp"
                    android:text="Outlet Type"
                    android:textColor="@color/text_color_dark" />

                <TextView
                    android:id="@+id/outletType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/text_bg_grey"
                    android:paddingHorizontal="@dimen/C10dp"
                    android:paddingVertical="6dp"
                    android:text="Outlet Type"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/outletTypeNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/text_bg_grey"
                    android:paddingHorizontal="@dimen/C10dp"
                    android:paddingVertical="6dp"
                    android:text="New Outlet Type"
                    android:textColor="@color/Exit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gst_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C15dp"
                    android:text="GST Number"
                    android:textColor="@color/text_color_dark" />

                <TextView
                    android:id="@+id/gst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/text_bg_grey"
                    android:paddingHorizontal="@dimen/C10dp"
                    android:paddingVertical="6dp"
                    android:text="GST Number"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/gstNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/text_bg_grey"
                    android:paddingHorizontal="@dimen/C10dp"
                    android:paddingVertical="6dp"
                    android:text="New GST Number"
                    android:textColor="@color/Exit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deliveryType_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C15dp"
                    android:text="Delivery Type"
                    android:textColor="@color/text_color_dark" />

                <TextView
                    android:id="@+id/deliveryType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/text_bg_grey"
                    android:paddingHorizontal="@dimen/C10dp"
                    android:paddingVertical="6dp"
                    android:text="Delivery Type"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/deliveryTypeNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/text_bg_grey"
                    android:paddingHorizontal="@dimen/C10dp"
                    android:paddingVertical="6dp"
                    android:text="New Delivery Type"
                    android:textColor="@color/Exit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryType_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/C15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:text="Category Type"
                    android:textColor="@color/text_color_dark" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoryTypeRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/C8dp"
                    tools:itemCount="2"
                    tools:listitem="@layout/category_item_for_approval" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/freezer_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:text="Freezer Details"
                    android:textColor="@color/text_color_dark" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/freezerRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/C8dp"
                    tools:itemCount="1"
                    tools:listitem="@layout/freezer_item_for_approval" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llApprovParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/approveBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_dgreen"
            android:gravity="center"
            android:text="Approve"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <Button
            android:id="@+id/rejectBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_amber"
            android:gravity="center"
            android:text="Reject"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>