<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SFA_Activity.Dashboard_Route">

    <LinearLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar_help"></include>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C3dp"
            android:layout_marginRight="@dimen/C3dp"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="@dimen/C8dp"
            android:paddingRight="@dimen/C8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C5dp"
                app:cardCornerRadius="@dimen/C5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/C8dp">

                        <TextView
                            android:id="@+id/headtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:text="Route"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFF"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDistributor"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/distributor_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/basic"
                            android:hint="Select Distributor"
                            android:padding="@dimen/C10dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="18dp" />


                        <ImageView
                            android:layout_width="@dimen/C10dp"
                            android:layout_height="@dimen/C10dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/C10dp"
                            android:src="@drawable/spin_down_arrow">

                        </ImageView>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_border">

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/btnCmbRoute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/route_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/basic"
                            android:hint="Select the Route"
                            android:padding="@dimen/C10dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="18dp" />


                        <ImageView
                            android:id="@+id/ivRouteSpinner"
                            android:layout_width="@dimen/C10dp"
                            android:layout_height="@dimen/C10dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/C10dp"
                            android:src="@drawable/spin_down_arrow">

                        </ImageView>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/C5dp">
    <LinearLayout
        android:id="@+id/btSrvOtlt"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/C20dp"
            android:layout_height="@dimen/C20dp"
            android:padding="@dimen/C1dp"
            android:src="@drawable/ic_baseline_storefront_24"/>
        <TextView
            android:id="@+id/txSrvOtlt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/C5dp"
            android:text="Service Outlet"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btUniOtlt"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/C20dp"
            android:layout_height="@dimen/C20dp"
            android:padding="@dimen/C1dp"
            android:src="@drawable/ic_baseline_storefront_24"/>
        <TextView
            android:id="@+id/txUniOtlt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/C5dp"
            android:text="Universal Outlet"
            />
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/C2dp"
    android:layout_marginLeft="@dimen/C5dp"
    android:layout_marginRight="@dimen/C5dp"
    android:layout_marginBottom="@dimen/C5dp"
    android:background="@drawable/hash_border">
    <ImageView
        android:layout_width="@dimen/C20dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/C3dp"
        android:src="@drawable/ic_search_icon"/>
    <EditText
        android:id="@+id/txSearchRet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/C5dp"
        android:textSize="12sp"
        android:hint="Search"
        />
</LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">


            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_bg"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@android:color/white"
                        app:tabIndicatorHeight="2dp" />

                </RelativeLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_bg"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/basic"
                        android:padding="@dimen/C10dp"
                        android:text="List Of Outlets"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="#FFF"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/leaverecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_request_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/C5dp"

                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Alltextclick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="All"
                        android:textColor="@color/grey_800"
                        android:textSize="18dp" />

                    <View
                        android:id="@+id/Alltextview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/C3dp"
                        android:background="@drawable/blue_bg">

                    </View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_request_Pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/C5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Pendingclick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Pending"
                        android:textColor="@color/grey_800"
                        android:textSize="18dp" />

                    <View
                        android:id="@+id/pendingview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/C3dp"
                        android:background="@drawable/blue_bg">

                    </View>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/C5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Completeclick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Complete"
                        android:textColor="@color/grey_800"
                        android:textSize="18dp" />

                    <View
                        android:id="@+id/completeview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/C3dp"
                        android:background="@drawable/blue_bg"></View>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/ReachedOutlet"
            style="@style/ButtonStyle"
            android:text="Reached Outlet" />
    </LinearLayout>


</RelativeLayout>