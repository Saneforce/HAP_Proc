<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_Hap.Permission_Request">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blueg"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="Permission Request"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/sv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar5"
            android:layout_marginBottom="60dp"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardview_light_background"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/button_yellow"
                                android:fontFamily="@font/alegreya_sans_sc"
                                android:gravity="center"
                                android:text="Permission Request"
                                android:textAllCaps="false"
                                android:padding="@dimen/C10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/alegreya_sans_sc"
                                android:text="Date of Permission"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/permission_date"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:background="@drawable/textbox_bg"
                                android:clickable="false"
                                android:elevation="@dimen/C5dp"
                                android:focusable="false"
                                android:fontFamily="@font/alegreya_sans_sc"
                                android:hint="Select the Date"
                                android:padding="5dp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shit_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alegreya_sans_sc"
                        android:text="Shit Timing:"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/shift_timing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/C10dp"
                        app:hintText="@string/shit_type" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alegreya_sans_sc"
                        android:text="Shift Time:"
                        android:textColor="@android:color/black" />


                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/permission_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/C5dp"
                        android:background="@drawable/textbox_bg"
                        android:elevation="@dimen/C5dp"
                        android:padding="@dimen/C5dp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="From Time:"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/from_time"
                            android:layout_width="147dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/textbox_bg"
                            android:clickable="false"
                            android:elevation="@dimen/C5dp"
                            android:focusable="false"
                            android:hint="From Time"
                            android:inputType="time"
                            android:padding="@dimen/C5dp"
                            android:textColor="@color/grey_500" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="To Time:"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/to_time"
                            android:layout_width="147dp"
                            android:layout_height="43dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/textbox_bg"
                            android:clickable="false"
                            android:elevation="@dimen/C5dp"
                            android:focusable="false"
                            android:hint="To Time"
                            android:inputType="time"
                            android:textColor="@color/grey_500" />
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C15dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <EditText
                                android:id="@+id/hrs_one"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/textbox_bg"
                                android:clickable="false"
                                android:elevation="@dimen/C5dp"
                                android:focusable="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:text=""
                                android:textColor="@color/grey_500" />

                            <View
                                android:id="@+id/divider23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="40dp"
                                android:background="@drawable/button_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/alegreya_sans_sc"
                                android:text="Taken"
                                android:textColor="#ffff"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <EditText
                                android:id="@+id/hrs_two"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/textbox_bg"
                                android:clickable="false"
                                android:elevation="@dimen/C5dp"
                                android:focusable="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:text=""
                                android:textColor="@color/grey_500" />

                            <View
                                android:id="@+id/divider42"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="40dp"
                                android:background="@drawable/button_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/alegreya_sans_sc"
                                android:text="Hrs"
                                android:textColor="#ffff"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <EditText
                                android:id="@+id/hrs_three"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/textbox_bg"
                                android:clickable="false"
                                android:elevation="@dimen/C5dp"
                                android:focusable="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="2"
                                android:textColor="@color/grey_500" />

                            <View
                                android:id="@+id/divider4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="40dp"
                                android:background="@drawable/button_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/alegreya_sans_sc"
                                android:text="Hrs"
                                android:textColor="#ffff"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/alegreya_sans_sc"
                    android:text="Reason"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/reason_permission"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/C100dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/textbox_bg"
                    android:elevation="@dimen/C5dp"
                    android:gravity="start"
                    android:hint="Reason"
                    android:padding="@dimen/C10dp"
                    android:textColor="@color/grey_500" />


                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/sign_bg"
                    android:fontFamily="@font/alegreya_sans_sc"
                    android:gravity="center_vertical"
                    android:text="SUBMIT"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <include layout="@layout/back_arrow"></include>


</androidx.constraintlayout.widget.ConstraintLayout>