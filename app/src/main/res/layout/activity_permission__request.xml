<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Permission_Request"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_bg"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc"
            android:text="Permission Request"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/sv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/toolbar5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:orientation="vertical"
            android:clipToPadding="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="Select the Date"
                android:textColor="@android:color/black"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/permission_date"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:clickable="false"
                android:elevation="10dp"
                android:focusable="false"
                android:inputType="date" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98dp">

                <EditText
                    android:id="@+id/from_time"
                    android:layout_width="130dp"
                    android:layout_height="38dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="106dp"
                    android:layout_marginBottom="13dp"
                    android:layout_toStartOf="@+id/to_time"
                    android:background="@drawable/textbox_bg"
                    android:clickable="false"
                    android:elevation="10dp"
                    android:focusable="false"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/to_time"
                    android:layout_width="130dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/textbox_bg"
                    android:clickable="false"
                    android:elevation="10dp"
                    android:focusable="false"
                    android:inputType="time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="88dp"
                    android:fontFamily="@font/alegreya_sans_sc"
                    android:text="To Time:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/alegreya_sans_sc"
                    android:text="From Time:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="Total Time:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/no_of_hours"
                android:layout_width="111dp"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:elevation="10dp"
                android:inputType="number"
                android:focusable="false"
                android:clickable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="Reason"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/reason_permission"
                android:layout_width="368dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:elevation="10dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_bg"
                android:fontFamily="@font/alegreya_sans_sc"
                android:gravity="center_vertical"
                android:text="SUBMIT"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="RtlCompat"
                android:layout_marginTop="15dp"/>



        </LinearLayout>


    </ScrollView>

</LinearLayout>