<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Permission_Request"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_blueg"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc"
            android:text="Permission Request"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/sv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/toolbar5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:orientation="vertical"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="123dp"
                app:cardCornerRadius="10dp"
                android:background="@color/cardview_light_background">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="58dp"
                        android:fontFamily="@font/alegreya_sans_sc"
                        android:text="Date of Permission"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />


                    <EditText
                        android:hint="Select the Date"
                        android:id="@+id/permission_date"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/textbox_bg"
                        android:clickable="false"
                        android:elevation="5dp"
                        android:focusable="false"
                        android:fontFamily="@font/alegreya_sans_sc" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/button_yellow"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alegreya_sans_sc"
                        android:text="Permission Request"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="Shift Time:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/no_of_hours"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:clickable="false"
                android:elevation="10dp"
                android:focusable="false"
                android:inputType="number"
                android:hint="select shift time"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98dp">

                <EditText
                    android:id="@+id/from_time"
                    android:layout_width="147dp"
                    android:layout_height="43dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="73dp"
                    android:layout_marginBottom="17dp"
                    android:layout_toStartOf="@+id/to_time"
                    android:background="@drawable/textbox_bg"
                    android:clickable="false"
                    android:elevation="10dp"
                    android:focusable="false"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/to_time"
                    android:layout_width="147dp"
                    android:layout_height="43dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="17dp"
                    android:background="@drawable/textbox_bg"
                    android:clickable="false"
                    android:elevation="10dp"
                    android:focusable="false"
                    android:inputType="time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="88dp"
                    android:fontFamily="@font/alegreya_sans_sc"
                    android:text="To Time:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/alegreya_sans_sc"
                    android:text="From Time:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <EditText
                            android:id="@+id/available"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/textbox_bg"
                            android:clickable="false"
                            android:elevation="10dp"
                            android:inputType="number" />

                        <View
                            android:id="@+id/divider23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/button_yellow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/alegreya_sans_sc"
                            android:text="Available:"
                            android:textColor="#ffff"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <EditText
                            android:id="@+id/taken_hrs"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/textbox_bg"
                            android:clickable="false"
                            android:elevation="10dp"
                            android:inputType="number" />

                        <View
                            android:id="@+id/divider42"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/button_yellow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/alegreya_sans_sc"
                            android:text="Taken Hrs"
                            android:textColor="#ffff"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <EditText
                            android:id="@+id/curr_taken"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/textbox_bg"
                            android:clickable="false"
                            android:elevation="10dp"
                            android:inputType="number" />

                        <View
                            android:id="@+id/divider4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/button_yellow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/alegreya_sans_sc"
                            android:text="curr.Taken:"
                            android:textColor="#ffff"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>





            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_sc"
                android:text="Reason"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/reason_permission"
                android:layout_width="368dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textbox_bg"
                android:elevation="10dp"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_bg"
                android:fontFamily="@font/alegreya_sans_sc"
                android:gravity="center_vertical"
                android:text="SUBMIT"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="RtlCompat"
                android:layout_marginTop="15dp"/>



        </LinearLayout>


    </ScrollView>

</LinearLayout>