<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/C5dp"
        android:layout_marginRight="@dimen/C5dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/C5dp"
        android:paddingTop="@dimen/C5dp"
        android:paddingRight="@dimen/C5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDistName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvACBal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="0.00"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rlRefBal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/C5dp">

                    <TextView
                        android:id="@+id/tvCapACBal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ivrefresh"
                        android:fontFamily="sans-serif"
                        android:text="Your AC Balance"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/ivrefresh"
                        android:layout_width="@dimen/C15dp"
                        android:layout_height="@dimen/C15dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_refresh_24"
                        app:tint="@color/black" />
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/C15dp"
            android:layout_marginBottom="@dimen/C5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAvailBal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Available Balance:₹0.00"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tvAmtBlk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Amount Blocked:₹0.00"
                android:textAlignment="viewEnd"
                android:textSize="9sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_border">

    </RelativeLayout>

</LinearLayout>