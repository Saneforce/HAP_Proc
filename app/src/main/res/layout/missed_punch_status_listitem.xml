<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints,UselessLeaf">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C7dp"
            android:layout_marginRight="@dimen/C7dp"
            android:layout_marginBottom="@dimen/C7dp"
            android:elevation="@dimen/C5dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/C8dp"
                android:layout_marginRight="@dimen/C8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sf_namelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp"
                    android:visibility="gone">




                    <TextView
                        android:id="@+id/SfName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="-1dp"
                        android:layout_marginRight="-1dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:padding="@dimen/C3dp"
                        android:text="thirumalai"

                        android:textSize="12dp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp">

                    <TextView
                        android:id="@+id/ondutydate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="2020-09-06"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"></TextView>


                    <TextView
                        android:id="@+id/OStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:fontFamily="@font/poppins_semibold"
                        android:padding="@dimen/C3dp"
                        android:text="Pending"
                        android:textColor="@android:color/white"
                        android:textSize="12dp"></TextView>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/C5dp"
                    android:background="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp"
                    android:layout_marginRight="@dimen/C10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="SHIFT / ONDUTY"
                        android:textColor="@android:color/black"
                        android:textSize="11dp"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp"

               >

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="2.42pm to 4.41"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:textStyle="bold"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp"
               >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:text="IN TIME"
                        android:textColor="@android:color/black"
                        android:textSize="11dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="OUT TIME"
                        android:textColor="@android:color/black"
                        android:textSize="11dp"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp"
              >

                    <TextView
                        android:id="@+id/txt_in_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="11:42:52"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:id="@+id/txt_out_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="10:49:52"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="REASON"
                        android:textColor="@android:color/black"
                        android:textSize="11dp"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp">

                    <TextView
                        android:id="@+id/text_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test"
                        android:textSize="13dp"></TextView>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp"
                    android:layout_marginBottom="@dimen/C10dp">

                    <TextView
                        android:id="@+id/applieddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Approved:2020-01-23"
                        android:textColor="@color/statuscolor"
                        android:textSize="11dp"></TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Reject 2020-01-23"
                        android:textColor="@color/statuscolor"
                        android:textSize="11dp"></TextView>

                </RelativeLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>