<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints,UselessLeaf">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C7dp"
            android:layout_marginRight="@dimen/C7dp"
            android:layout_marginBottom="@dimen/C7dp"
            android:elevation="@dimen/C5dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/C8dp"
                android:layout_marginRight="@dimen/C8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sf_namelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/SfName"
                        style="@style/TextStyle" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp">

                    <TextView
                        android:id="@+id/ondutydate"
                        style="@style/TextStyle"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/OStatus"
                        android:textColor="@android:color/white"
                        style="@style/TextStyle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/C5dp"
                    android:background="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp"
                    android:layout_marginRight="@dimen/C10dp">

                    <TextView
                        style="@style/TextStyle"
                        android:text="SHIFT / ONDUTY" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/type"
                    style="@style/TextStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_weight="1"
                        android:text="IN TIME" />

                    <TextView
                        style="@style/TextStyle"
                        android:text="OUT TIME" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp">

                    <TextView
                        android:id="@+id/txt_in_time"
                        style="@style/TextStyle"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txt_out_time"
                        style="@style/TextStyle" />

                </LinearLayout>

                <TextView
                    style="@style/TextStyle"
                    android:text="REASON" />

                <TextView
                    android:id="@+id/text_reason"
                    style="@style/TextStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp"
                    android:layout_marginBottom="@dimen/C10dp">

                    <TextView
                        style="@style/TextStyle"
                        android:id="@+id/applieddate"
                        android:layout_weight="1"/>
                    <TextView
                        style="@style/TextStyle"
                        android:text="Reject 2020-01-23"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>